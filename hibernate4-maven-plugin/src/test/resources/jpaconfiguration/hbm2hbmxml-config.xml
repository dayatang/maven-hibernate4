<project>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>hibernate4-maven-plugin</artifactId>
        <configuration>
          <components>
            <component>
              <name>hbm2hbmxml</name>
              <outputDirectory>target/hibernate4/generated-mappings-jpa</outputDirectory>
              <implementation>jpaconfiguration</implementation>
            </component>
          </components>
        </configuration>
        <componentProperties>
          <persistenceunit>ejb3test</persistenceunit>
        </componentProperties>
      </plugin>
    </plugins>
  </build>
</project>